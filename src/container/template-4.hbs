<header class="header ">
    <div class="">
        {{> logo}}
    </div>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<main class="main">
    <img src="{{image}}" alt="main_image" class="main_image">
    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{description}}</p>
        <a href="{{href}}" class="button main_button">{{button}}</a>
    </div>
</main>
{{/with}}

<div class="featured">
    {{#each featured}}
    {{> cardFeatured data=this}}
    {{/each}}
</div>


<div class="form">
    {{#each actions}}
    <div class="form_content">
        <h3 class="form_title">{{heading}}</h3>
        <div class="form_action">
            <a href="{{url}}" class="button form_button">{{text}}</a>
        </div>
    </div>
    {{/each}}
</div>



<footer class="footer">
    <div class="">
        {{> logo}}
        <span class="footer_copiright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div class="">
        <span class="footer-title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>